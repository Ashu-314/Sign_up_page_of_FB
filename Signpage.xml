<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sign Up"
        android:textColor="@color/black"
        android:textSize="40sp"

        android:textStyle="bold"


        tools:layout_editor_absoluteX="32dp"
        tools:layout_editor_absoluteY="65dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="0sp"
        android:paddingBottom="17dp"
        android:text=" It's quick and easy"
        android:textColor="@color/black"
        android:textSize="18sp"


        tools:layout_editor_absoluteX="32dp"
        tools:layout_editor_absoluteY="118dp" />

    <EditText
        android:id="@+id/mailp"
        android:layout_width="190dp"
        android:layout_height="wrap_content"
        android:background="@drawable/edittext_background"
        android:hint="First name"
        android:inputType="text"
        android:padding="12dp"
        android:textColor="#FFFFFF"
        tools:layout_editor_absoluteX="32dp"
        tools:layout_editor_absoluteY="177dp" />

    <EditText
        android:id="@+id/mior"
        android:layout_width="370dp"
        android:layout_height="wrap_content"
        android:background="@drawable/edittext_background"
        android:hint="New password"
        android:inputType="text"
        android:padding="12dp"
        android:textColor="#731515"
        tools:layout_editor_absoluteX="32dp"
        tools:layout_editor_absoluteY="302dp" />

    <EditText
        android:id="@+id/maor"
        android:layout_width="370dp"
        android:layout_height="wrap_content"
        android:background="@drawable/edittext_background"
        android:hint="Confirm password"
        android:inputType="text"
        android:padding="12dp"
        android:textColor="#731515"
        tools:layout_editor_absoluteX="32dp"
        tools:layout_editor_absoluteY="359dp" />

    <EditText
        android:id="@+id/mai"
        android:layout_width="370dp"
        android:layout_height="wrap_content"
        android:background="@drawable/edittext_background"
        android:hint="Mobile number or email address"
        android:inputType="text"
        android:padding="12dp"
        android:textColor="#731515"
        tools:layout_editor_absoluteX="32dp"
        tools:layout_editor_absoluteY="239dp" />

    <EditText
        android:id="@+id/fo"
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:background="@drawable/edittext_background"
        android:hint="Surname"
        android:inputType="text"
        android:padding="12dp"
        android:textColor="#731515"
        tools:layout_editor_absoluteX="231dp"
        tools:layout_editor_absoluteY="177dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="0sp"
        android:paddingBottom="17.5dp"
        android:text=" Date of birth?"
        android:textColor="#555555"
        android:textSize="15sp"


        tools:layout_editor_absoluteX="32dp"
        tools:layout_editor_absoluteY="429dp" />

    <EditText
        android:id="@+id/map"
        android:layout_width="115dp"
        android:layout_height="wrap_content"
        android:background="@drawable/edittext_background"
        android:hint="day"
        android:inputType="text"
        android:padding="12dp"
        android:textColor="#FFFFFF"
        tools:layout_editor_absoluteX="32dp"
        tools:layout_editor_absoluteY="458dp" />

    <EditText
        android:id="@+id/fow"
        android:layout_width="115dp"
        android:layout_height="wrap_content"
        android:background="@drawable/edittext_background"
        android:hint="month"
        android:inputType="text"
        android:padding="12dp"
        android:textColor="#731515"
        tools:layout_editor_absoluteX="159dp"
        tools:layout_editor_absoluteY="458dp" />

    <EditText
        android:id="@+id/fow"
        android:layout_width="115dp"
        android:layout_height="wrap_content"
        android:background="@drawable/edittext_background"
        android:hint="year"
        android:inputType="text"
        android:padding="12dp"
        android:textColor="#731515"
        tools:layout_editor_absoluteX="286dp"
        tools:layout_editor_absoluteY="458dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="0sp"
        android:paddingBottom="17.5dp"
        android:text=" Gender?"
        android:textColor="#555555"
        android:textSize="15sp"


        tools:layout_editor_absoluteX="32dp"
        tools:layout_editor_absoluteY="527dp" />

    <RadioButton
        android:id="@+id/radioMale"
        android:layout_width="115dp"
        android:layout_height="wrap_content"
        android:background="@drawable/edittext_background"
        android:button="@null"
        android:drawableEnd="?android:attr/listChoiceIndicatorSingle"
        android:gravity="center_vertical|end"
        android:text="Male       "
        android:textColor="#444444"
        android:textSize="18sp"
        tools:layout_editor_absoluteX="32dp"
        tools:layout_editor_absoluteY="555dp" />

    <RadioButton
        android:id="@+id/radioale"
        android:layout_width="115dp"
        android:layout_height="wrap_content"
        android:background="@drawable/edittext_background"
        android:button="@null"
        android:drawableEnd="?android:attr/listChoiceIndicatorSingle"
        android:gravity="center_vertical|end"
        android:text="Female   "
        android:textColor="#444444"
        android:textSize="18sp"
        tools:layout_editor_absoluteX="159dp"
        tools:layout_editor_absoluteY="555dp" />

    <RadioButton
        android:id="@+id/radiole"
        android:layout_width="115dp"
        android:layout_height="wrap_content"
        android:background="@drawable/edittext_background"
        android:button="@null"
        android:drawableEnd="?android:attr/listChoiceIndicatorSingle"
        android:gravity="center_vertical|end"
        android:text="Custom  "
        android:textColor="#444444"
        android:textSize="18sp"
        tools:layout_editor_absoluteX="286dp"
        tools:layout_editor_absoluteY="555dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="0sp"
        android:paddingBottom="17.5dp"
        android:text=" By clicking Sign Up, you agree to our term, Privacy Policy and cookies\n
Policy You may receive SMS notification from us and can opt out at any\n time."
        android:textColor="#666666"
        android:textSize="11.7sp"


        tools:layout_editor_absoluteX="32dp"
        tools:layout_editor_absoluteY="678dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="0sp"
        android:paddingBottom="17.5dp"
        android:text=" People who use our service may have upload your contact information \n to facebook Learn more"
        android:textColor="#666666"
        android:textSize="11.7sp"


        tools:layout_editor_absoluteX="32dp"
        tools:layout_editor_absoluteY="632dp" />


    <Button
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:backgroundTint="#00b200"
        android:text="Sign Up"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="20sp"
        tools:layout_editor_absoluteX="116dp"
        tools:layout_editor_absoluteY="738dp"

        android:textStyle="bold"/>
</RadioGroup>


</androidx.constraintlayout.widget.ConstraintLayout>